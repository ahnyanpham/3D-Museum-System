##################################################
# HTTP → HTTPS (redirect + ACME)
##################################################
server {
    listen 80 default_server;
    server_name bennharong.servehttp.com;
    location ^~ /.well-known/acme-challenge/ {
        root /opt/nginx/letsencrypt;
        allow all;
    }
    location / {
        return 301 https://bennharong.servehttp.com$request_uri;
    }
}

##################################################
# HTTPS SERVER (SITE CHÍNH)
##################################################
server {
    listen 443 ssl default_server;
    server_name bennharong.servehttp.com;

    #### SSL ####
    ssl_certificate     /etc/letsencrypt/live/bennharong.servehttp.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/bennharong.servehttp.com/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_session_cache shared:SSL:50m;
    ssl_session_timeout 1d;

    #### SECURITY HEADERS ####
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header Content-Security-Policy "upgrade-insecure-requests" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    #### ROOT FRONTEND ####
    root /home/www/museum-system/frontend;
    index index.html;

    #### URL ROUTING - MỚI ####
    
    # /admin → /web/admin/
    location = /admin {
        return 301 /web/admin/;
    }
    location /admin/ {
        return 301 /web/admin/;
    }

    # /quanly → /web/quan-ly/
    location = /quanly {
        return 301 /web/quan-ly/;
    }
    location /quanly/ {
        return 301 /web/quan-ly/;
    }

    # /login → /login.html
    location = /login {
        return 301 /login.html;
    }

    # /register → /register.html
    location = /register {
        return 301 /register.html;
    }

    #### LANDING PAGE (USER PORTAL) ####
    location = / {
        try_files /index.html =404;
    }

    #### WEB ADMIN STRUCTURE ####
    location /web/admin/ {
        alias /home/www/museum-system/frontend/web/admin/;
        index index.html;
        try_files $uri $uri/ /web/admin/dashboard/index.html;
        add_header Access-Control-Allow-Origin *;
    }

    #### WEB STAFF PORTAL (QUẢN LÝ) - MỚI ####
    location /web/quan-ly/ {
        alias /home/www/museum-system/frontend/web/quan-ly/;
        index index.html;
        try_files $uri $uri/ /web/quan-ly/index.html;
        add_header Access-Control-Allow-Origin *;
    }

    #### OLD DASHBOARD (Keep for compatibility) ####
    location /dashboard {
        alias /home/www/museum-system/frontend/;
        index index.html;
        try_files $uri /index.html;
    }

    #### URL REWRITE: /tham-quan → /public/thamquan_bnr/ ####
    location /tham-quan {
        alias /home/www/museum-system/frontend/public/thamquan_bnr/;
        index index.html;
        try_files $uri $uri/ /tham-quan/index.html;
        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Methods "GET, OPTIONS";
    }

    #### PUBLIC CONTENT ####
    location /public/ {
        alias /home/www/museum-system/frontend/public/;
        index index.html;
        try_files $uri $uri/ =404;
        add_header Access-Control-Allow-Origin *;
    }

    #### API ####
    location /api/ {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        # Increase timeout for auth operations
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    #### 3D MODELS (.glb files) ####
    location /3d-map/models/ {
        alias /home/www/museum-system/frontend/public/3d-map/models/;
        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Methods "GET, OPTIONS";
        add_header Cache-Control "public, max-age=31536000, immutable";
        types {
            application/octet-stream glb;
        }
    }

    #### STATIC ASSETS ####
    location /static/ {
        alias /home/www/museum-system/frontend/static/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    location /css/ {
        alias /home/www/museum-system/frontend/css/;
        expires 7d;
        add_header Cache-Control "public";
    }

    location /js/ {
        alias /home/www/museum-system/frontend/js/;
        expires 7d;
        add_header Cache-Control "public";
    }

    location /picture/ {
        alias /home/www/museum-system/picture/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    #### LOG ####
    access_log /home/www/log/nginx-access.log;
    error_log  /home/www/log/nginx-error.log;
}
