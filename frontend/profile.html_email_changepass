    <script>
        const API_URL = '/api';
        let currentUserId = null;

        window.addEventListener('DOMContentLoaded', async () => {
            await loadProfile();
        });

        async function loadProfile() {
            try {
                const response = await fetch(`${API_URL}/auth/session`, {
                    credentials: 'include'
                });
                const data = await response.json();

                if (!data.success || !data.logged_in) {
                    window.location.href = '/login.html';
                    return;
                }

                const user = data.data;
                currentUserId = user.user_id;

                document.getElementById('avatar').textContent = user.username.charAt(0).toUpperCase();
                document.getElementById('fullname').textContent = user.fullname || user.username;
                document.getElementById('role').textContent = user.role || 'Kh√°ch H√†ng';

                document.getElementById('username').textContent = user.username;
                document.getElementById('fullnameInfo').textContent = user.fullname || '-';
                document.getElementById('email').textContent = user.email || '-';
                document.getElementById('phone').textContent = user.phone || '-';
                document.getElementById('roleInfo').textContent = user.role || '-';

                await loadTicketStats();

                document.getElementById('loadingState').style.display = 'none';
                document.getElementById('profileCard').style.display = 'block';

            } catch (error) {
                console.error('Load profile error:', error);
                window.location.href = '/login.html';
            }
        }

        async function loadTicketStats() {
            try {
                const response = await fetch(`${API_URL}/customer/tickets?per_page=1000`, {
                    credentials: 'include'
                });
                const data = await response.json();

                if (data.success && data.data) {
                    const tickets = data.data;
                    const activeCount = tickets.filter(t => t.status === 'active').length;

                    document.getElementById('totalTickets').textContent = tickets.length;
                    document.getElementById('activeTickets').textContent = activeCount;
                }
            } catch (error) {
                console.error('Load ticket stats error:', error);
            }
        }

        function showEditModal() {
            // Populate form
            document.getElementById('editUsername').value = document.getElementById('username').textContent;
            document.getElementById('editFullname').value = document.getElementById('fullnameInfo').textContent !== '-' ? 
                document.getElementById('fullnameInfo').textContent : '';
            document.getElementById('editEmail').value = document.getElementById('email').textContent !== '-' ? 
                document.getElementById('email').textContent : '';
            document.getElementById('editPhone').value = document.getElementById('phone').textContent !== '-' ? 
                document.getElementById('phone').textContent : '';

            document.getElementById('editModal').classList.add('show');
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.remove('show');
            hideEditAlerts();
        }

        document.getElementById('editForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            await saveProfile();
        });

        async function saveProfile() {
            const email = document.getElementById('editEmail').value.trim();
            const phone = document.getElementById('editPhone').value.trim();

            hideEditAlerts();

            // Validate phone
            if (phone && !/^[0-9]{10,11}$/.test(phone)) {
                showEditError('S·ªë ƒëi·ªán tho·∫°i ph·∫£i c√≥ 10-11 ch·ªØ s·ªë');
                return;
            }

            // Validate email
            if (email && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                showEditError('Email kh√¥ng h·ª£p l·ªá');
                return;
            }

            try {
                // Note: This endpoint may not exist yet in backend
                // You may need to create it or use a different endpoint
                const response = await fetch(`${API_URL}/profile/update`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify({
                        email: email,
                        phone: phone
                    })
                });

                const data = await response.json();

                if (data.success) {
                    showEditSuccess('C·∫≠p nh·∫≠t th√¥ng tin th√†nh c√¥ng!');
                    
                    // Update displayed info
                    document.getElementById('email').textContent = email || '-';
                    document.getElementById('phone').textContent = phone || '-';

                    setTimeout(() => {
                        closeEditModal();
                    }, 1500);
                } else {
                    showEditError(data.message || 'C·∫≠p nh·∫≠t th·∫•t b·∫°i');
                }
            } catch (error) {
                console.error('Update profile error:', error);
                showEditError('L·ªói k·∫øt n·ªëi. Vui l√≤ng th·ª≠ l·∫°i.');
            }
        }

        function showEditError(message) {
            const errorDiv = document.getElementById('editError');
            errorDiv.textContent = message;
            errorDiv.classList.add('show');
            setTimeout(() => {
                errorDiv.classList.remove('show');
            }, 5000);
        }

        function showEditSuccess(message) {
            const successDiv = document.getElementById('editSuccess');
            successDiv.textContent = message;
            successDiv.classList.add('show');
        }

        function hideEditAlerts() {
            document.getElementById('editError').classList.remove('show');
            document.getElementById('editSuccess').classList.remove('show');
        }

        async function logout() {
            if (!confirm('B·∫°n c√≥ ch·∫Øc mu·ªën ƒëƒÉng xu·∫•t?')) return;

            try {
                const response = await fetch(`${API_URL}/auth/logout`, {
                    method: 'POST',
                    credentials: 'include'
                });

                const data = await response.json();

                if (data.success) {
                    alert('ƒêƒÉng xu·∫•t th√†nh c√¥ng!');
                    window.location.href = '/';
                }
            } catch (error) {
                console.error('Logout error:', error);
                alert('ƒêƒÉng xu·∫•t th·∫•t b·∫°i. Vui l√≤ng th·ª≠ l·∫°i.');
            }
        }

        // Close modal on outside click
        document.getElementById('editModal').addEventListener('click', (e) => {
            if (e.target.id === 'editModal') {
                closeEditModal();
            }
        });
    </script>
</body>
