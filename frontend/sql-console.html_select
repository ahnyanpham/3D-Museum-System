<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SQL Console - Admin Only</title>
    
    <script>
    // SQL Console ready - No authentication required
    window.addEventListener('DOMContentLoaded', function() {
        console.log('SQL Console loaded and ready');
    });
    </script>
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
            background: #1e1e1e;
            color: #d4d4d4;
            padding: 20px;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
        }

        .header {
            background: linear-gradient(135deg, #c41e3a 0%, #a01828 100%);
            padding: 20px 30px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            color: white;
            font-size: 28px;
            font-weight: 600;
        }

        .warning-badge {
            background: #ff4444;
            color: white;
            padding: 8px 16px;
            border-radius: 5px;
            font-size: 13px;
            font-weight: bold;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }

        .layout {
            display: grid;
            grid-template-columns: 250px 1fr;
            gap: 20px;
        }

        .sidebar {
            background: #2d2d2d;
            padding: 20px;
            border-radius: 10px;
            height: fit-content;
        }

        .sidebar h3 {
            color: #61afef;
            margin-bottom: 15px;
            font-size: 14px;
            text-transform: uppercase;
        }

        .table-list {
            max-height: 500px;
            overflow-y: auto;
        }

        .table-item {
            padding: 8px 12px;
            margin-bottom: 5px;
            background: #1e1e1e;
            border-radius: 5px;
            cursor: pointer;
            font-size: 13px;
            transition: all 0.2s;
        }

        .table-item:hover {
            background: #3e3e3e;
            color: #61afef;
        }

        .main-content {
            background: #2d2d2d;
            padding: 25px;
            border-radius: 10px;
        }

        .query-section {
            margin-bottom: 20px;
        }

        .query-section label {
            display: block;
            margin-bottom: 10px;
            color: #61afef;
            font-weight: bold;
            font-size: 14px;
        }

        .query-input {
            width: 100%;
            min-height: 200px;
            background: #1e1e1e;
            color: #98c379;
            border: 2px solid #3e3e3e;
            border-radius: 8px;
            padding: 15px;
            font-family: 'Consolas', 'Monaco', monospace;
            font-size: 14px;
            resize: vertical;
            line-height: 1.5;
        }

        .query-input:focus {
            outline: none;
            border-color: #61afef;
            box-shadow: 0 0 0 3px rgba(97, 175, 239, 0.1);
        }

        .button-group {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            font-family: inherit;
        }

        .btn-execute {
            background: #4caf50;
            color: white;
        }

        .btn-execute:hover {
            background: #45a049;
            transform: translateY(-1px);
        }

        .btn-clear {
            background: #ff9800;
            color: white;
        }

        .btn-clear:hover {
            background: #fb8c00;
        }

        .btn-close {
            background: #f44336;
            color: white;
        }

        .btn-close:hover {
            background: #d32f2f;
        }

        .results-section {
            background: #1e1e1e;
            border-radius: 8px;
            padding: 20px;
            min-height: 300px;
        }

        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #3e3e3e;
        }

        .results-header h3 {
            color: #61afef;
            font-size: 16px;
        }

        .results-info {
            color: #abb2bf;
            font-size: 13px;
        }

        .results-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        .results-table th {
            background: #2d2d2d;
            color: #e5c07b;
            padding: 12px;
            text-align: left;
            font-size: 13px;
            font-weight: 600;
            border-bottom: 2px solid #3e3e3e;
        }

        .results-table td {
            padding: 10px 12px;
            border-bottom: 1px solid #3e3e3e;
            font-size: 13px;
            color: #d4d4d4;
        }

        .results-table tr:hover {
            background: #2d2d2d;
        }

        .message {
            padding: 15px 20px;
            border-radius: 6px;
            margin-bottom: 15px;
            font-size: 14px;
        }

        .message-success {
            background: rgba(76, 175, 80, 0.1);
            border-left: 4px solid #4caf50;
            color: #4caf50;
        }

        .message-error {
            background: rgba(244, 67, 54, 0.1);
            border-left: 4px solid #f44336;
            color: #f44336;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: #61afef;
        }

        .loading-spinner {
            border: 4px solid #3e3e3e;
            border-top: 4px solid #61afef;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 15px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .examples {
            background: #2d2d2d;
            padding: 15px;
            border-radius: 6px;
            margin-top: 15px;
        }

        .examples h4 {
            color: #c678dd;
            margin-bottom: 10px;
            font-size: 13px;
        }

        .examples code {
            display: block;
            background: #1e1e1e;
            color: #98c379;
            padding: 8px 12px;
            border-radius: 4px;
            margin-bottom: 8px;
            font-size: 12px;
            cursor: pointer;
        }

        .examples code:hover {
            background: #3e3e3e;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üóÑÔ∏è SQL Console - Database Query Tool (Read-Only)</h1>
            <div class="warning-badge">‚ö†Ô∏è SELECT ONLY</div>
        </div>

        <div class="layout">
            <div class="sidebar">
                <h3>üìä Tables</h3>
                <div class="table-list" id="tableList">
                    <div class="loading">
                        <div class="loading-spinner"></div>
                        Loading tables...
                    </div>
                </div>

                <div class="examples">
                    <h4>Quick Queries</h4>
                    <code onclick="setQuery('SELECT * FROM CUSTOMER LIMIT 10')">SELECT * FROM CUSTOMER</code>
                    <code onclick="setQuery('SELECT * FROM TICKET LIMIT 10')">SELECT * FROM TICKET</code>
                    <code onclick="setQuery('SELECT * FROM USER')">SELECT * FROM USER</code>
                    <code onclick="setQuery('PRAGMA table_list')">Show all tables</code>
                </div>
            </div>

            <div class="main-content">
                <div class="query-section">
                    <label>SQL Query:</label>
                    <textarea id="queryInput" class="query-input" placeholder="Enter SQL query here... (SELECT only)
Example: SELECT * FROM CUSTOMER LIMIT 10

‚ö†Ô∏è Only SELECT, PRAGMA, EXPLAIN queries are allowed"></textarea>
                </div>

                <div class="button-group">
                    <button class="btn btn-execute" onclick="executeQuery()">‚ñ∂ Execute Query</button>
                    <button class="btn btn-clear" onclick="clearQuery()">üóëÔ∏è Clear</button>
                    <button class="btn btn-close" onclick="closeConsole()">‚ùå Close & Exit</button>
                </div>

                <div id="messageBox"></div>

                <div class="results-section" id="resultsSection">
                    <div class="results-header">
                        <h3>Query Results</h3>
                        <span class="results-info" id="resultsInfo">No query executed yet</span>
                    </div>
                    <div id="resultsContent"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Load tables on page load
        window.addEventListener('load', loadTables);

        async function loadTables() {
            try {
                const response = await fetch('/api/sql-console/tables', {
                    credentials: 'include'
                });
                const data = await response.json();

                if (data.success) {
                    const tableList = document.getElementById('tableList');
                    tableList.innerHTML = data.tables.map(table => 
                        `<div class="table-item" onclick="showTableInfo('${table}')">${table}</div>`
                    ).join('');
                } else {
                    showMessage('Failed to load tables: ' + data.message, 'error');
                }
            } catch (error) {
                console.error('Error loading tables:', error);
                showMessage('Error loading tables', 'error');
            }
        }

        async function showTableInfo(tableName) {
            setQuery(`SELECT * FROM ${tableName} LIMIT 10`);
        }

        function setQuery(query) {
            document.getElementById('queryInput').value = query;
        }

        function clearQuery() {
            document.getElementById('queryInput').value = '';
            document.getElementById('resultsContent').innerHTML = '';
            document.getElementById('resultsInfo').textContent = 'No query executed yet';
            document.getElementById('messageBox').innerHTML = '';
        }

        async function executeQuery() {
            const query = document.getElementById('queryInput').value.trim();

            if (!query) {
                showMessage('Please enter a query', 'error');
                return;
            }

            // Show loading
            document.getElementById('resultsContent').innerHTML = `
                <div class="loading">
                    <div class="loading-spinner"></div>
                    Executing query...
                </div>
            `;

            try {
                const response = await fetch('/api/sql-console/execute', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'include',
                    body: JSON.stringify({ query })
                });

                const data = await response.json();

                if (data.success) {
                    if (data.type === 'SELECT') {
                        displayResults(data);
                        showMessage(`Query executed successfully. ${data.count} rows returned.`, 'success');
                    } else {
                        document.getElementById('resultsContent').innerHTML = `
                            <div class="message message-success">
                                <strong>Query Type:</strong> ${data.type}<br>
                                <strong>Affected Rows:</strong> ${data.affected_rows}
                            </div>
                        `;
                        showMessage(`${data.type} executed. ${data.affected_rows} rows affected.`, 'success');
                    }
                    document.getElementById('resultsInfo').textContent = `${data.type} - ${data.count || data.affected_rows} rows`;
                } else {
                    document.getElementById('resultsContent').innerHTML = `
                        <div class="message message-error">
                            ${data.message}
                        </div>
                    `;
                    showMessage('‚ùå ' + data.message, 'error');
                }
            } catch (error) {
                console.error('Error executing query:', error);
                showMessage('‚ùå Error: ' + error.message, 'error');
            }
        }

        function displayResults(data) {
            if (data.rows.length === 0) {
                document.getElementById('resultsContent').innerHTML = '<p style="text-align:center;color:#abb2bf;padding:20px;">No results found</p>';
                return;
            }

            let html = '<table class="results-table"><thead><tr>';
            
            // Table headers
            data.columns.forEach(col => {
                html += `<th>${col}</th>`;
            });
            html += '</tr></thead><tbody>';

            // Table rows
            data.rows.forEach(row => {
                html += '<tr>';
                data.columns.forEach(col => {
                    let value = row[col];
                    if (value === null) value = '<i style="color:#666">NULL</i>';
                    html += `<td>${value}</td>`;
                });
                html += '</tr>';
            });

            html += '</tbody></table>';
            document.getElementById('resultsContent').innerHTML = html;
        }

        function showMessage(message, type) {
            const messageBox = document.getElementById('messageBox');
            messageBox.innerHTML = `<div class="message message-${type}">${message}</div>`;

            setTimeout(() => {
                messageBox.innerHTML = '';
            }, 5000);
        }

        function closeConsole() {
            if (confirm('ƒê√≥ng SQL Console v√† quay v·ªÅ trang Admin?')) {
                window.location.href = '/web/admin/users/';
            }
        }

        // Keyboard shortcuts
        document.getElementById('queryInput').addEventListener('keydown', function(e) {
            // Ctrl+Enter to execute
            if (e.ctrlKey && e.key === 'Enter') {
                e.preventDefault();
                executeQuery();
            }
        });
    </script>
</body>
</html>

