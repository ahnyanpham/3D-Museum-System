    <script>
        const API_URL = '/api';
        let cart = [];
        let orderCreated = false;

        // Generate VietQR payment code
        function generateQRCode(orderData) {
            const accountNo = '018812398';
            const accountName = 'BAO TANG BEN NHA RONG';
            const acqId = '970416'; // ACB Bank ID
            const amount = orderData.total_price;
            const addInfo = orderData.payment_reference;
            
            // VietQR API URL
            const qrUrl = `https://img.vietqr.io/image/${acqId}-${accountNo}-compact2.jpg?amount=${amount}&addInfo=${addInfo}&accountName=${accountName}`;
            
            const qrImage = document.getElementById('qrCodeImage');
            const qrLoading = document.getElementById('qrLoading');
            
            qrImage.src = qrUrl;
            qrImage.onload = () => {
                qrLoading.style.display = 'none';
                qrImage.style.display = 'block';
