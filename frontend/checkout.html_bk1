                return;
            }
            
            cart = JSON.parse(cartData);
            renderOrderSummary();
        }

        // Render order summary
        function renderOrderSummary() {
            const container = document.getElementById('orderSummary');
            
            let totalQuantity = 0;
            let totalPrice = 0;
            
            const itemsHtml = cart.map(item => {
                const subtotal = item.price * item.quantity;
                totalQuantity += item.quantity;
                totalPrice += subtotal;
                
                return `
                    <div class="order-item">
                        <div class="order-item-info">
                            <h4>${item.type_name}</h4>
                            <p>${item.quantity} √ó ${formatPrice(item.price)} VND</p>
                        </div>
                        <div style="font-weight: bold; color: #c41e3a;">
                            ${formatPrice(subtotal)} VND
                        </div>
                    </div>
                `;
            }).join('');
            
            container.innerHTML = `
                ${itemsHtml}
                <div class="order-total">
                    <div class="total-row">
                        <span>T·ªïng s·ªë v√©:</span>
                        <span>${totalQuantity}</span>
                    </div>
                    <div class="total-row final">
                        <span>T·ªïng ti·ªÅn:</span>
                        <span>${formatPrice(totalPrice)} VND</span>
                    </div>
                </div>
            `;
            
            document.getElementById('paymentAmount').textContent = formatPrice(totalPrice) + ' VND';
        }

        // Create order
        async function createOrder() {
            if (orderCreated) {
                showAlert('info', 'ƒê∆°n h√†ng ƒë√£ ƒë∆∞·ª£c t·∫°o! Vui l√≤ng qu√©t QR code ƒë·ªÉ thanh to√°n.');
