            if (cart.length === 0) {
                showAlert('error', 'Gi·ªè h√†ng tr·ªëng!');
                return;
            }
            
            try {
                document.getElementById('loadingOverlay').style.display = 'flex';
                
                // Check if logged in
                const sessionResponse = await fetch(`${API_URL}/auth/session`);
                const sessionData = await sessionResponse.json();
                
                if (!sessionData.logged_in) {
                    showAlert('error', 'Vui l√≤ng ƒëƒÉng nh·∫≠p ƒë·ªÉ ƒë·∫∑t v√©!');
                    setTimeout(() => {
                        window.location.href = '/login.html?redirect=/booking.html';
                    }, 1500);
                    return;
                }
                
                // Create orders (one per ticket type)
                const orders = [];
                
                for (const item of cart) {
                    const response = await fetch(`${API_URL}/booking/create-order`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            ticket_type_id: item.ticket_type_id,
                            quantity: item.quantity,
                            customer_note: ''
                        })
                    });
                    
                    const data = await response.json();
                    
                    if (!data.success) {
                        throw new Error(data.message || 'T·∫°o ƒë∆°n h√†ng th·∫•t b·∫°i');
                    }
                    
                    orders.push(data.data);
                }
                
                // Show first order's payment info
                const firstOrder = orders[0];
                document.getElementById('paymentReference').textContent = firstOrder.payment_reference;
                
                // Generate QR code
                generateQRCode(firstOrder);
                
                // Clear cart
                sessionStorage.removeItem('bookingCart');
                orderCreated = true;
                
                // Update UI
                document.getElementById('createOrderBtn').style.display = 'none';
                document.getElementById('viewOrdersBtn').style.display = 'block';
                
                showAlert('success', `T·∫°o th√†nh c√¥ng ${orders.length} ƒë∆°n h√†ng! Vui l√≤ng qu√©t m√£ QR ƒë·ªÉ thanh to√°n.`);
                
            } catch (error) {
                console.error('Create order error:', error);
                showAlert('error', error.message || 'L·ªói khi t·∫°o ƒë∆°n h√†ng!');
            } finally {
